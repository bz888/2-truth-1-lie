{
  "name": "2-truth-1-lie",
  "version": "0.4.0",
  "description": "art-project-darryl",
  "repository": "https://github.com/bz888/2-truth-1-lie",
  "main": "dist/src/server/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "build": "run-p build:client build:server",
    "build:client": "npm run webpack:prod -- --mode=production",
    "build:server": "tsc -p .",
    "dev": "run-p dev:server dev:client",
    "dev:client": "webpack --watch",
    "dev:server": "nodemon src/server/index.ts",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest --watchAll",
    "webpack:prod": "webpack --config ./webpack.prod.js",
    "webpack": "webpack --config ./webpack.config.js"
  },
  "author": "bz888",
  "license": "ISC",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest"
    ],
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ],
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        2,
        "single"
      ],
      "eol-last": [
        "error",
        "always"
      ],
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1,
          "maxEOF": 0,
          "maxBOF": 0
        }
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "react/prop-types": 0
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@tsconfig/node16": "^1.0.2",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.32",
    "@types/react-google-recaptcha": "^2.1.5",
    "@types/superagent": "^4.1.15",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-loader": "^8.2.5",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "fork-ts-checker-webpack-plugin": "^7.2.11",
    "jest": "^26.6.3",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/react-redux": "^7.1.24",
    "babel-polyfill": "^6.26.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "firebase": "^9.8.1",
    "firebase-tools": "^10.9.2",
    "framer-motion": "^6.3.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-firebase-hooks": "^4.0.2",
    "react-google-recaptcha": "^2.1.0",
    "react-router-dom": "^6.3.0",
    "superagent": "^7.0.2",
    "textcortex-hemingwai-js": "^1.1.1"
  }
}
